@Article{Ray1981,
  Title                    = {A Longitudinal Analysis of Party Competition in State Legislative Elections},
  Author                   = {David Ray and John Havick},
  Journal                  = {American Journal of Political Science},
  Year                     = {1981},
  Number                   = {1},
  Pages                    = {119-128},
  Volume                   = {25},

  __markedentry            = {[Robbie:2]},
  Abstract                 = {The level of party competition within states is frequently considered in terms of statewide elections. However, using a statewide measure masks important variations in party competition, especially when considering the behavior of individual state legislators. This is so because the statewide measure may bear no similarity to party competition in an individual legislator's district. We investigated party competition for state legislative seats in eight states during 1892-1972. Our analysis reveals that state legislative party competition is on the decline in this century, with some exceptions. Our data support Burnham's work on electoral disaggregation and the atrophy of the party system, and show substantial differences between the classification of states according to statewide electoral competition and classification according to state legislative competition.},
  ISSN                     = {00925853, 15405907},
  Owner                    = {Robbie},
  Publisher                = {[Midwest Political Science Association, Wiley]},
  Timestamp                = {2016.01.26},
  Url                      = {http://www.jstor.org/stable/2110916}
}

@Article{Sharman2013,
