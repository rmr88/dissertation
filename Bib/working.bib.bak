@Article{Shufeldt2012,
  Title                    = {Two Distinct Concepts: Party Competition in Government and Electoral Competition in the American States},
  Author                   = {Shufeldt, Gregory and Flavin, Patrick},
  Journal                  = {State Politics \& Policy Quarterly},
  Year                     = {2012},
  Number                   = {3},
  Pages                    = {330-342},
  Volume                   = {12},

  Abstract                 = {American state politics scholars have generally relied on Ranney’s measure of the partisan composition of state legislatures and governors’ offices to evaluate competition between parties for control of state government, and Holbrook and Van Dunk’s measure of the competitiveness of individual state legislative elections to evaluate the degree of electoral competition in a state. Both measure “competition” and were previously correlated with one another, so researchers might be tempted to consider them two measures of the same concept. This would be mistaken, however, because they are measuring two distinct concepts. We use new data on state legislative partisan balance and election returns to compute (and make publicly available) the two measures of competition from 1970 to 2003, a time span that is significantly longer than any previous study. We show that the relationship between the two measures has drastically changed over the last 30 years. Although the two measures were positively correlated in the 1970s and 1980s, they are now (as we might expect, given they are different concepts) negatively correlated. We investigate one possible explanation for this change and conclude by discussing a set of practical recommendations for scholars who plan to incorporate a measure of competition in future studies.},
  Doi                      = {10.1177/1532440012451154},
  Eprint                   = {http://spa.sagepub.com/content/12/3/330.full.pdf+html},
  Owner                    = {Robbie},
  Timestamp                = {2016.01.26},
  Url                      = {http://spa.sagepub.com/content/12/3/330.abstract}
}

@Article{Tidmarch1986,
  Title                    = {Interparty Competition in the U. S. States: Legislative Elections, 1970-1978},
  Author                   = {Charles M. Tidmarch and Edward Lonergan and John Sciortino},
  Journal                  = {Legislative Studies Quarterly},
  Year                     = {1986},
  Number                   = {3},
  Pages                    = {353-374},
  Volume                   = {11},

  Abstract                 = {The article examines patterns of interparty competition at the district level in legislative elections occurring in the American states during the 1970s. Data were collected for more than 90% of the district contests during the period. Results are reported by year, state, and chamber. Included are data on mean Democratic vote percentages, proportions of marginal districts, and proportions of uncontested districts. Democratic means were found to have varied considerably in many states during the decade, rising most sharply in 1974 and declining in later elections. Marginality decreased in a majority of states during the period, while uncontested districts (including Republican-held ones) increased in number in many states.},
  ISSN                     = {03629805},
  Owner                    = {Robbie},
  Publisher                = {[Wiley, Comparative Legislative Research Center]},
