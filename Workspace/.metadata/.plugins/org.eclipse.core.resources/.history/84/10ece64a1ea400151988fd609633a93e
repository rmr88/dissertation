package tests;

import java.io.File;
import java.io.FilenameFilter;
import java.util.Arrays;

public class Testing
{
	public static void main(String args[])
	{
		String path = "C:\\Users\\Robbie\\Documents\\dissertation\\Data\\elections"
				+ "\\stateResults\\AL";
		String[] folders = new File(path).list(new FilenameFilter()
		{
			public boolean accept(File current, String name)
			{
				return new File(current, name).isDirectory();
			}
		});
		System.out.println(Arrays.toString(folders));
		
		for (String folder : folders)
		{
			File[] files = new File(folder).listFiles(new FilenameFilter()
			{
				public boolean accept(File dir, String name)
				{
					return name.endsWith(".XLS");
				}
			});
			for (File file : files)
				System.out.println(file.getAbsolutePath());
		}
	}
}
